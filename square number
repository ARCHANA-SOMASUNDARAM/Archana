public class Main {
    public static void main(String[] args) {
        int num=0;
        int rows = 4;
        for (int i = 1; i <=rows; i++) { 
            for (int j = 1; j <= i; j++) { 
                System.out.print((num * num) + " ");
                num++;
            }
            System.out.println(); 
        }
    }
}
